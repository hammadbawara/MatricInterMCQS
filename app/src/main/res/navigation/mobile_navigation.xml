<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/chooseSubject">

    <fragment
        android:id="@+id/chooseSubject"
        android:name="com.hz_apps.matricintermcqs.home.SelectBook.ChooseSubject"
        android:label="fragment_choose_subject"
        tools:layout="@layout/fragment_choose_subject" >
        <action
            android:id="@+id/action_chooseSubject_to_fragmentSelectChapter"
            app:destination="@id/fragmentSelectChapter"
            app:enterAnim="@anim/from_right_to_left_enter"
            app:exitAnim="@anim/from_left_to_right_exit"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/from_left_to_right_enter"
            app:popExitAnim="@anim/from_right_to_left_exit" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSelectChapter"
        android:name="com.hz_apps.matricintermcqs.home.SelectChapter.fragmentSelectChapter"
        android:label="fragment_select_chapter"
        tools:layout="@layout/fragment_select_chapter" />
    <fragment
        android:id="@+id/fragment_Saved"
        android:name="com.hz_apps.matricintermcqs.saved.Fragment_Saved"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" />
    <fragment
        android:id="@+id/fragment_more"
        android:name="com.hz_apps.matricintermcqs.more.Fragment_more"
        android:label="Fragment_more" />
</navigation>